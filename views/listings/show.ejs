<!-- linking ejsMate for layout  -->
 <% layout('/layout/boilerplate') %>

<body>
    <div class="row">
        <div class="col-md-8 mt-2 offset-2">
            <h3>Listing Details :</h3>
        </div>
        <div class="col-md-6 offset-2">
            <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height: 16rem;">
            <p class="mt-2"><b>Title :<%= listing.title %></b></p>
            <p><b>Description :</b><%= listing.description %></p>
            <p> <b>Price :</b>&#8377; <%= listing.price.toLocaleString("en-IN") %>/ night</p>
            <p><b>Location :</b><%= listing.location %></p>
            <p><b>Country : </b><%= listing.country %></p>
            <div class="btns">
                <a href="/listings/<%= listing._id %>/edit" class="add-btn"> Edit it</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=delete">
                    <button class="btn-dark">Delete </button>
                </form>
            </div>
        </div>
        
    </div>
    
    
    
</body>
